<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="post">
  Pet name: <input type="text" name="pet_name" id="pet[name]" value="<%=@pet.name%>"/>
  <br>
  Owner name:
  <%Owner.all.each do |owner|%>
    <input type="checkbox" name="owner_id" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner.id==owner.id %> ><%=owner.name%></input>
  <%end%>
  <br>
  Or create a new owner:<br>
  Name: <input type="text" name="owner[name]" id="owner_name" />
  <input type="submit" value="Update Pet" />
</form>
